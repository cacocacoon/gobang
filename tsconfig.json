{
    "compilerOptions": {
        "sourceMap": true,
        "noUnusedLocals": true,
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "strict": true,
        "strictNullChecks": false,
        "module": "es2015",
        "target": "es5",
        "jsx": "react",
        "pretty": true,
        "removeComments": true,
        "locale": "zh-TW",
        "moduleResolution": "node",
        "lib": [
            "es2015",
            "dom"
        ]
    },
    "include": [
        "./src/**/*"
    ]
}