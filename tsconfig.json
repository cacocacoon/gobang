{
    "compilerOptions": {
        "sourceMap": true,
        "noUnusedLocals": true,
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "strict": true,
        "strictNullChecks": false,
        "module": "commonjs",
        "target": "es2015",
        "jsx": "react",
        "pretty": true,
        "removeComments": true
    },
    "include": [
        "./src/**/*"
    ]
}